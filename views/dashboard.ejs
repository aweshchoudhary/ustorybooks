<title>USTORY - Dashboard</title>
<section class="w-100 border-bottom">
  <div class="container my-5">
    <div class="row">
      <div class="col-md-4">
        <div class="user-picture mx-auto" style="height: 20rem; width: 20rem;">
          <img src="<%= user.image %> " class="h-100 w-100 " alt="user profile picture">
        </div>
      </div>
      <div class="col-md-8">
        <div class="user-details">
          <h1>
            <%= user.displayName %>
          </h1>
          <a href="/dashboard/<%= user.googleId %> " class="lead text-decoration-none text-dark text-lowercase">@ <%=
              user.displayName.replace(' ','') %> </a>
          <p class=" lead mt-3">Total Stories : <%= userStories.length %> </p>
              <p class="lead">Total Views : <%= user.totalViews %> </p>
        </div>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 px-md-5 border-bottom">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h1 class="my-5">
              My Stories
              <div class="bg-primary mx-auto mt-3" style="height: 5px; width: 150px"></div>
            </h1>
          </div>
        </div>
      </div>
    </div>
    <div class="row my-4">
      <% if (userStories) { %>
       <% userStories.forEach(story => { %>
        <div class="col-md-4">
          <%- include("partials/card", {user, story}) %>
        </div>
        <% }) %>
          <% } else { %>
            <div class="col-12">
              <div class="nothing d-flex flex-column justify-content-center align-items-center py-5">
                <div class="display-1">
                  <i class="fas fa-user-edit fa-10x" style="color: gray;"></i>
                </div>
                <h1 class="text-capitalize my-4">nothing to show, write your first story </h1>
                <a href="/createstory" class="btn btn-primary text-light py-3 px-5"><i class="fas fa-pen mx-3"></i>
                  Create
                  Story</a>
              </div>
            </div>
            <% } %>

      </div>
    </div>
</section>