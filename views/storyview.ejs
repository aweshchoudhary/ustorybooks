<title>USTORY - Story View</title>
<section>
    <div class="container">
        <div class="row mt-5">
            <div class="col-12">
                <h4>Story View</h4>
            </div>
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-5">
                    <div class="heading">
                        <h1>
                            <%= story.storyTitle %>
                        </h1>
                    </div>
                    <div class="user-details">
                        <div class="username text-primary">
                            <%= user.displayName %>
                        </div>
                        <div class="created-date">
                            <%= `${story.createdAt.getDate()}-${story.createdAt.getMonth()}-${story.createdAt.getFullYear()}`
                                %>
                        </div>

                    </div>
                </div>
                <hr>
            </div>
            <div class="col-12">
                <div>
                    <%- story.storyDescription %>
                </div>
            </div>
            <div class="col-12">
                <div class="d-flex">
                    <div class="my-4">
                        <% if(story.storyUserId===user.googleId){ %>
                            <a href="/story/edit/<%= story.id %>"
                                class="btn btn-primary btn-lg px-5 text-light text-decoration-none"><i
                                    class=" fas fa-pen    "></i> Edit</a>
                            <a href="/story/delete/<%= story.id %>"
                                class="btn btn-primary btn-lg px-5 text-light text-decoration-none"><i
                                    class=" fas fa-trash    "></i> Edit</a>
                            <% } %>

                    </div>
                    <div class="d-flex align-items-center">
                        <div class="views mx-4">
                            <i class="fas fa-eye mr-3 text-primary"></i>
                            <%= story.views %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>