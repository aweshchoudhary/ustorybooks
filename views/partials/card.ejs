<div class="card text-left p-3 m-4 mx-auto" style="min-height: 24rem ; width: 100%; position: relative;">
  <div class="card-body">
    <h2 class="card-title h1">
      <%= story.storyTitle %>
        <hr />
    </h2>
    <div class="card-dash">
      <div class="card-user mt-3 text-primary">
        <i class="fas fa-user    "></i>
        <%- story.storyUserName %>
      </div>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="created-date">Created: <%=
            `${story.createdAt.getDate()}-${story.createdAt.getMonth()}-${story.createdAt.getFullYear()}` %>
        </div>
      </div>
      <div class="d-flex align-items-center">
        <a href="/stories/view/<%= story.id %> " class="btn btn-primary btn-lg text-light">
          <i class="fas fa-eye"></i>
          Read
        </a>
        <% if(userAuth){ %>
          <% if (user.googleId==story.storyUserId) { %>
            <a href="/story/edit/<%= story.id %> " class="btn btn-primary btn-lg mx-3 text-light">
              <i class="fas fa-pen"></i>
              Edit
            </a>
            <a href="/story/delete/<%= story.id %> " class="btn btn-primary btn-lg text-light">
              <i class="fas fa-trash"></i>
              Delete
            </a>
            <% } %>
              <% } %>

      </div>
      <div class="d-flex align-items-center mt-3">
        <div class="views mx-4">
          <i class="fas fa-eye mr-3 text-primary"></i>
          <%= story.views %>
        </div>
      </div>
    </div>
  </div>
</div>